<?php

use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Ajax\AjaxResponse;
use Drupal\Core\Ajax\ReplaceCommand;
use Drupal\views\Views;
use Drupal\node\Entity\NodeType;

/**
 * Implements hook_form_alter().
 */
function rsvp_system_form_alter(&$form, FormStateInterface $form_state, $form_id) {
    // Check if the form is one of the targeted types.
    if ($form_id == 'node_rsvp_request_form' || $form_id == 'another_specific_form_id') {
        include_once 'includes/FormAlterations.php';
        rsvp_system_handle_form_alter($form, $form_state, $form_id);
    }
}

// Include other necessary files for structured management
include_once 'includes/AjaxCallbacks.php';
include_once 'includes/UtilityFunctions.php';
include_once 'includes/ValidationHandlers.php';
include_once 'includes/FormAlterations.php';
